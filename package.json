{
  "name": "@georapbox/web-share-element",
  "version": "2.0.0",
  "description": "A custom element that implements the Web Share API to share user-defined data.",
  "main": "dist/web-share.min.js",
  "module": "dist/web-share.min.js",
  "unpkg": "dist/web-share.min.js",
  "type": "module",
  "files": [
    "/src",
    "/dist"
  ],
  "scripts": {
    "lint": "eslint src/**/*.js",
    "test": "web-test-runner",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "build": "rollup -c --environment BUILD:production",
    "clean": "rimraf dist coverage",
    "prepare": "npm-run-all clean lint test build"
  },
  "keywords": [
    "custom element",
    "web component",
    "web-share"
  ],
  "author": {
    "name": "George Raptis",
    "email": "georapbox@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/georapbox/web-share-element.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/georapbox/web-share-element/issues"
  },
  "homepage": "https://github.com/georapbox/web-share-element#readme",
  "devDependencies": {
    "@esm-bundle/chai": "~4.3.4-fix.0",
    "@open-wc/testing": "~3.1.2",
    "@web/test-runner": "~0.13.27",
    "@web/test-runner-playwright": "~0.8.8",
    "eslint": "~8.12.0",
    "eslint-plugin-wc": "~1.3.2",
    "npm-run-all": "~4.1.5",
    "rimraf": "~3.0.2",
    "rollup": "~2.70.1",
    "rollup-plugin-terser": "~7.0.2",
    "sinon": "~13.0.1"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
